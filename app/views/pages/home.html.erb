  <div id="mobile_contact">
    <h1 class="mobile_contact__title">Let's talk.</h1>
    <div class="contact__container">
      <div class="contact__form">
        <div class="form">
          <%= form_for @inbound do |c| %>
          <div class="form__content">
            <%= c.label :name, "Name" %>
            <%= c.text_field :name, placeholder: "John Doe"  %>
            <%= c.label :email, "Email" %>
            <%= c.text_field :email, placeholder: "john.doe@lewagon.com" %>
            <%= c.label :message, "Message" %>
            <%= c.text_area :message, :class => 'form__message', placeholder: "Hi there, I'd like to connect with you about building an MVP!" %>
          </div>
          <%= c.submit 'Contact Tom', :id=>"sweet-alert-demo-mobile", :class => 'btn_transparent_white'%>
          <% end %>
        </div>
      </div>
      <div class="contact__links">
        <a class="mobile_contact__link"href="https://www.linkedin.com/in/tom-patton">LINKEDIN</a>
        <a class="mobile_contact__link" href="https://github.com/tompatton2">GITHUB</a>
        <a class="mobile_contact__link"href="mailto:tom.patton22@gmail.com">EMAIL</a>
        <a class="mobile_contact__link"href="/resume">RESUME</a>
      </div>
    </div>
  </div>
</div>

